<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="LoadingAndResultContainer">
        <attr name="loading_behavior" format="reference"/>
        <attr name="content_behavior" format="reference"/>
        <attr name="error_behavior" format="reference"/>
        <attr name="empty_behavior" format="reference"/>
        <attr name="default_status_v2" format="enum">
            <enum name="loading" value="0"/>
            <enum name="content" value="1"/>
            <enum name="error" value="2"/>
            <enum name="empty" value="3"/>
        </attr>
    </declare-styleable>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/cha</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>

    </style>

    <style name="titlestyle">

        <item name="android:textSize">12sp</item>
    </style>

</resources>
